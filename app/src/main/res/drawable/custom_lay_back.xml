<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
        <corners android:radius="0dip" />

        <stroke android:width="0dip" android:color="#868383" />

        <gradient android:angle="270" android:endColor="#90000000" android:startColor="#10000000"
            android:centerColor="#10000000" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
        <corners android:radius="0dip" />

        <stroke android:width="0dip" android:color="#868383" />

        <gradient android:angle="270" android:endColor="#90000000" android:startColor="#10000000"
            android:centerColor="#10000000" />
        </shape></item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dip" />

            <stroke android:width="0dip" android:color="#ababab" />

            <gradient android:angle="270" android:endColor="#000000" android:startColor="#10000000"
                android:centerColor="#BB000000" />
        </shape>
    </item>

</selector>