        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_weight="0.54"

        android:layout_gravity="left"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.54"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_lot_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:background="@drawable/rounded_rectangle"
                    android:gravity="center"
                    android:text="Lot1 "
                    android:textColor="#ffffff"
                    android:textSize="9sp" />



                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"
                    android:layout_marginRight="4dp"

                    android:layout_centerVertical="true"

                    android:src="@drawable/icon_close_sml"
                    android:gravity="top" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rel_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="left"

                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testartist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Artist: "

                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_ac_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testartist"
                        android:gravity="center"
                        android:text="Morderen "
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_artist"
                    android:layout_toRightOf="@+id/iv_main_img"
                    android:gravity="left"

                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Category: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_ac_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testcategory"
                        android:gravity="center"
                        android:text="Morderen "
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_cat"
                    android:layout_toRightOf="@+id/iv_main_img"
                    android:gravity="left"

                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testmidium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_ac_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testmidium"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:text="Morderen "
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_medium"
                    android:layout_toRightOf="@+id/iv_main_img"
                    android:gravity="left"

                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testyear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Year: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_ac_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testyear"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:text="Year"
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_year"
                    android:layout_toRightOf="@+id/iv_main_img"
                    android:gravity="left"

                    android:orientation="vertical">


                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testcsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Size: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_ac_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testcsize"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:text="Morderen "
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_etimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_size"
                    android:gravity="left"

                    android:orientation="vertical">


                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testestimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Estimate: "
                        android:textColor="@color/colorPrimary"

                        android:textSize="10sp" />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_estimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/testestimate"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:text="Morderen "
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp" />

                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"


                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"

                    android:gravity="left"
                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansRegular

                        android:id="@+id/workSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="Current Bid"
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/iv_oneback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:textSize="10sp"

                            />

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/tv_ac_bid"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iv_oneback"
                            android:gravity="left"
                            android:layout_marginLeft="2dp"
                            android:text="13,15,200"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/colorPrimary"

                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="6dp"

                    android:gravity="center"
                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Next Valid Bid"
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/iv_twoback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="₹"
                            android:textColor="@color/colorPrimary"
                            android:textSize="10sp"

                            />

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/tv_ac_nextbid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iv_twoback"
                            android:gravity="left"
                            android:layout_marginLeft="2dp"
                            android:text="20,60,200"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

