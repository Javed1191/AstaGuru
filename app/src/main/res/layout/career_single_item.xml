<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <com.infomanav.astaguru.WorkSansMedium
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/JobTtile"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Evaluation"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"

            android:src="@drawable/plus"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_expand" />



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/rel_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            android:gravity="left"

            android:orientation="horizontal">

            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/testartist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp"
                android:text="Job Title:"
                android:textColor="#000000" />

            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/tv_jobtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Client Relations Executive "
                android:textColor="@color/colorBodyText" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/rel_artisct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"

            android:gravity="left"

            android:orientation="horizontal">

            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/testartcist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp"
                android:text="Business Unit:"
                android:textColor="#000000" />

            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/businessUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Client Relations Executive "
                android:textColor="@color/colorBodyText" />


        </LinearLayout>

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testaxcrtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Job Responsibility:"
            android:textColor="#000000" />

        <com.infomanav.astaguru.JustifiedTextView
            android:id="@+id/jobResponsibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:gravity="left|center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
android:text="test"            android:textColor="@color/colorBodyText" />


        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testaxxcrtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Responsibilities:"
            android:textColor="#000000" />

        <com.infomanav.astaguru.JustifiedTextView
            android:id="@+id/Responsibilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:gravity="left"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Achieving assigned sales targets by sourcing and meeting prospective clients. Prospecting and developing new client relationships within a defined geography."
            android:textColor="@color/colorBodyText" />


        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testaxsxcrtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Functional Skills:"
            android:textColor="#000000" />
        <com.infomanav.astaguru.JustifiedTextView
            android:id="@+id/functionalSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:gravity="left"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Good communication skills, written and oral"
            android:textColor="@color/colorBodyText" />

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testaxsxcrxtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Technical Skills:"
            android:textColor="#000000" />

        <com.infomanav.astaguru.JustifiedTextView
            android:id="@+id/technicalSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="Good communication skills, written and oral"
            android:textColor="@color/colorBodyText" />



        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testaxsxcrst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Joining Time:"
            android:textColor="#000000" />

        <com.infomanav.astaguru.JustifiedTextView
            android:id="@+id/joiningTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="ASAP"
            android:textColor="@color/colorBodyText" />
        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/txestaxsxcrst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Salary:"
            android:textColor="#000000" />

        <com.infomanav.astaguru.JustifiedTextView
            android:id="@+id/jobSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="OPEN (based on last drawn) +incentives (Note: Salary not a constraint for right fit)"
            android:textColor="@color/colorBodyText" />

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/txestaxsxcrzst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Experience:"
            android:textColor="#000000" />


        <com.infomanav.astaguru.JustifiedTextView
            android:id="@+id/jobExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="(0-3) years"
            android:textColor="@color/colorBodyText" />

        <Button
            android:id="@+id/btn_apply"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"

            android:layout_marginBottom="10dp"
            android:layout_gravity="left"
            android:textAllCaps="false"

            android:text="Apply" />

    </LinearLayout>

</LinearLayout>