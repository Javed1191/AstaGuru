<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.infomanav.astaguru.WorkSansSemiBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:gravity="center"
        android:padding="17dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Please confirm your bid"
        android:contentDescription="@string/app_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="@drawable/line" />


    <com.infomanav.astaguru.WorkSansRegular
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bidlot"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:gravity="center"
     android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:background="@drawable/rounded_rectangle"
        android:text="Lot 1 "
        android:textColor="#ffffff"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
    />


    <com.infomanav.astaguru.WorkSansRegular
        android:id="@+id/username"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Next Valid Bid" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/iv_icon"-->
            <!--android:layout_width="12dp"-->
            <!--android:layout_height="12dp"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:gravity="center"-->

            <!--/>-->

        <TextView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:text="â‚¹"

            />

        <com.infomanav.astaguru.WorkSansRegular

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon"
            android:gravity="center"
            android:text="13,15,200"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/tv_bidvalue"
            android:textColor="@color/colorPrimary"

            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.infomanav.astaguru.WorkSansRegular
            android:inputType="textEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tv_cancel"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Cancel" />

        <View
            android:layout_width="0.01dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"

            android:background="@drawable/line" />
        <com.infomanav.astaguru.WorkSansRegular
            android:inputType="textEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_confim"
            android:paddingTop="10dp"
            android:textColor="@color/colorLink"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Confirm" />


    </LinearLayout>

</LinearLayout>