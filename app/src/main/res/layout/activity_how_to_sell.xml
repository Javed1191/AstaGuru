                        android:textColor="@color/colorLink"/>

                    <com.infomanav.astaguru.JustifiedTextView
                        android:id="@+id/tv_reserve_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_user"
                        android:visibility="visible"/>
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_Seller_Contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/tv_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="Seller&apos;s Contract"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_sell_contract"
                    android:layout_width="22dp"

                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/plus"/>

                <LinearLayout
                    android:id="@+id/wb_sell_contract_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_sell_contract"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/wb_sell_contract"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/iv_sell_contract"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/arrow"
                            android:textColor="@color/colorLink"/>

                        <com.infomanav.astaguru.JustifiedTextView
                            android:id="@+id/tv_sell_contract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_user"
                            android:visibility="visible"/>
                    </LinearLayout>

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/tv_contxract"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@+id/wb_sell_contract"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="Reserve price."
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <LinearLayout
                        android:id="@+id/wb_Reserveprice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv_contxract"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/arrow"
                            android:textColor="@color/colorLink"/>

                        <com.infomanav.astaguru.JustifiedTextView
                            android:id="@+id/tv_Reserveprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_user"
                            android:visibility="visible"/>
                    </LinearLayout>

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/tv_contxrcact"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@+id/wb_Reserveprice"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="Seller's commission."
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <LinearLayout
                        android:id="@+id/wb_commission"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv_contxract"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/arrow"
                            android:textColor="@color/colorLink"/>

                        <com.infomanav.astaguru.JustifiedTextView
                            android:id="@+id/tv_commission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_user"
                            android:visibility="visible"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


