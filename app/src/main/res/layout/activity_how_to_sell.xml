                <!--android:layout_marginLeft="2dp"-->
                <!--android:id="@+id/wb_sell_decition"-->
                <!--android:layout_height="wrap_content"></WebView>-->
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_Logistics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/tv_stics"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="Logistics"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_logistics"
                    android:layout_width="22dp"

                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/plus"/>

                <LinearLayout
                    android:id="@+id/wb_sell_logistics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_logistics"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/arrow"
                        android:textColor="@color/colorLink"/>

                    <com.infomanav.astaguru.JustifiedTextView
                        android:id="@+id/tv_logistics_decition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_user"
                        android:visibility="visible"/>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_Reserve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="Reserve Price"
                    android:textColor="#000000"
                    android:textSize="15sp"
