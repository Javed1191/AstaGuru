<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"   >
            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tool_text"
                android:textColor="#ffffff"
                android:gravity="left"
                android:text="Management"
                android:textStyle="bold"
                android:textSize="20dp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/iv_user"
                    android:gravity="right"
                    android:text="Evaluation"
                       android:textSize="17sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:background="@drawable/plus"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_evalution" />



            </RelativeLayout>
            <WebView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_marginLeft="14dp"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:visibility="gone"

                android:id="@+id/wb_sell_evaluation"
                android:layout_height="wrap_content"></WebView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:background="@drawable/plus"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_deci_sell" />




                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/tv_dicision"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="Decision to Sell"
                       android:textSize="17sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/tv_deci_sell"
                    android:layout_alignStart="@+id/tv_deci_sell" />
            </RelativeLayout>

            <WebView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginLeft="14dp"
                android:layout_margin="5dp"
                android:id="@+id/wb_sell_decition"
                android:layout_height="wrap_content"></WebView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/tv_stics"
                    android:gravity="right"
                    android:text="Logistics"
                       android:textSize="17sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:background="@drawable/plus"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_logistics" />




            </RelativeLayout>
            <WebView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginLeft="14dp"
                android:layout_margin="5dp"
                android:id="@+id/wb_sell_logistics"
                android:layout_height="wrap_content"></WebView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_price"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:text="Reserve Price"
                       android:textSize="17sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:background="@drawable/plus"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_reserve_price" />


            </RelativeLayout>

            <WebView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="14dp"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:id="@+id/wb_sell_price"
                android:layout_height="wrap_content"></WebView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_contract"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:text="Seller&apos;s Contract"
                       android:textSize="17sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:background="@drawable/plus"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_sell_contract" />




            </RelativeLayout>

            <WebView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="14dp"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:id="@+id/wb_sell_contract"
                android:layout_height="wrap_content"></WebView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/tv_seller"
                    android:gravity="right"
                    android:text="Seller&apos;s Commission"
                       android:textSize="17sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:background="@drawable/plus"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_sell_commition" />




            </RelativeLayout>
            <WebView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_marginLeft="14dp"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:id="@+id/wb_sell_comition"
                android:layout_height="wrap_content"></WebView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_paynet"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:text="Payment"
                       android:textSize="17sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:background="@drawable/plus"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_payment" />



            </RelativeLayout>

            <WebView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginLeft="14dp"
                android:layout_margin="5dp"
                android:id="@+id/wb_sell_payment"
                android:layout_height="wrap_content"></WebView>
            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"

                android:layout_gravity="center"
                android:text="Want To Sell ?"
                   android:textSize="17sp" />


            <com.infomanav.astaguru.WorkSansRegular
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"

                android:text="Lorem Ipsum is simply dummy text  unchanged.  \n         Lorem Ipsum passagess of Lorem Ipsum."

                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center"

                android:textSize="10sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Details"
                android:textAllCaps="false"
                android:background="#000000"
                android:id="@+id/btn_sell"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal" />

        </LinearLayout></ScrollView>

</LinearLayout>