                android:text="Want To Sell ?"

                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <com.infomanav.astaguru.WorkSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
