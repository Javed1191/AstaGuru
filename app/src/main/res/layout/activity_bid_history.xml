<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <LinearLayout
                android:layout_width="25dp"
                android:id="@+id/lin_closeactivity"
                android:layout_height="25dp"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/left_arrow"
                    android:gravity="left" />

            </LinearLayout>
            <com.infomanav.astaguru.WorkSansMedium
                android:id="@+id/tool_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="Lot 1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:gravity="left"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_main_img"
        android:layout_width="100dp"
        android:layout_marginRight="5dp"
        android:layout_height="110dp"
        android:src="@drawable/img_past_1" />
        <com.infomanav.astaguru.WorkSansRegular

            android:id="@+id/tv_lot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle"
            android:layout_toRightOf="@+id/iv_main_img"
            android:text="Lot1 "
android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="9sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_artist"
        android:layout_below="@+id/tv_lot"
        android:layout_toRightOf="@+id/iv_main_img"
        android:gravity="left"

        android:orientation="vertical">

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testartist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Artist :"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/tv_ac_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_toRightOf="@+id/testartist"
            android:text="Morderen "
            android:textColor="@color/colorBodyText"
            />






    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_main_img"
        android:id="@+id/rel_cat"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/rel_artist"
        android:gravity="left"

        android:orientation="vertical">

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Category :"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/tv_ac_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_toRightOf="@+id/testcategory"
            android:text="Morderen "
            android:textColor="@color/colorBodyText"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_main_img"
        android:id="@+id/rel_medium"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/rel_cat"
        android:gravity="left"

        android:orientation="vertical">

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testmidium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Medium :"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/tv_ac_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_toRightOf="@+id/testmidium"
            android:text="Morderen "
            android:textColor="@color/colorBodyText"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_main_img"
        android:id="@+id/rel_year"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/rel_medium"
        android:gravity="left"

        android:orientation="vertical">

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Year :"
            android:textColor="@color/colorPrimary"
            />
        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/tv_ac_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_toRightOf="@+id/testyear"
            android:text="Year"
            android:textColor="@color/colorBodyText"
            />

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_main_img"
            android:id="@+id/rel_size"
            android:layout_below="@+id/rel_year"
            android:gravity="left"
            android:layout_marginTop="3dp"

            android:orientation="vertical">


            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/testcsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Size:"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                />
            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/tv_ac_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"        android:textSize="12sp"

                android:layout_toRightOf="@+id/testcsize"
                android:text="Morderen "
                android:textColor="@color/colorBodyText"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_etimate"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/iv_main_img"
            android:layout_below="@+id/rel_size"
            android:gravity="left"

            android:orientation="vertical">


            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/testestimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"        android:textSize="12sp"
                android:text="Estimate:"

                android:textColor="@color/colorPrimary"
                />
            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/tv_estimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_toRightOf="@+id/testestimate"
                android:text="Morderen "
                android:textColor="@color/colorBodyText"
                />

        </RelativeLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_main_img"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_bidnow"
            android:text="Bid Now"
            android:background="#000000"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:layout_width="80dp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_proxybid"
            android:layout_height="25dp"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/btn_bidnow"
            android:background="#000000"
            android:text="Proxy Bid"
            android:textColor="#ffffff" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_artixst"

        android:layout_toRightOf="@+id/iv_main_img"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:orientation="vertical">

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/tv_noofbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/testartxist"
            android:text="10 "

            />

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/testartxist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:text="No Of Bids:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_main_img"
        android:orientation="horizontal">

        <com.infomanav.astaguru.WorkSansRegular
            android:text="Nick Name"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"         android:textSize="13sp"
            android:layout_width="wrap_content"
            android:textColor="#000000" />

        <com.infomanav.astaguru.WorkSansRegular
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Amount($)"
            android:textColor="#000000" />
        <com.infomanav.astaguru.WorkSansRegular
            android:text="Amount(â‚¹)"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"         android:textSize="13sp"
            android:layout_width="wrap_content"
            android:textColor="#000000" />

        <com.infomanav.astaguru.WorkSansRegular
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Date Time"
            android:textColor="#000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />
</LinearLayout>