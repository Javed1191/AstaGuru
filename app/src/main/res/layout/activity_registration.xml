<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"   >
            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tool_text"
                android:gravity="left"
                android:textColor="#ffffff"
                android:text="Management"
                android:textStyle="bold"
                android:textSize="20dp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Create your AstaGuru account and manage your profile, save favourite auctions to your gallery, track
your purchases" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_email"
                android:text="Personal Details"
                android:textColor="#000000"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_first_name" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_first_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="First Name"
                    android:inputType="textCapWords"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_first_name" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_last_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/tv_email"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorBodyText"
                    android:hint="Last Name"
                    android:inputType="textCapWords"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_city" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_address"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Address"
                    android:inputType="textCapWords"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_city" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_contry"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Country"
                    android:inputType="textCapWords"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_city" />
                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_state"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/tv_email"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorBodyText"
                    android:hint="State"
                    android:inputType="textCapWords"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/icon_city" />
                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_city"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/tv_email"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorBodyText"
                    android:hint="City"
                    android:inputType="textCapWords"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/icon_city" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_zip"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Zip"

                    android:inputType="number"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_mobile" />


                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_countrycode"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:layout_below="@+id/tv_email"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorBodyText"
                    android:text="91"
                    android:inputType="phone"
                    />

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.01dp"
                    android:background="#000000" />
                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_mobile"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/tv_email"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="0.2"
                    android:maxLength="11"
                    android:textColor="@color/colorBodyText"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/icon_telephone" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_telephone"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/tv_email"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorBodyText"
                    android:hint="Telephone Number"
                    android:inputType="phone"
                    android:maxLength="11"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/icon_fax" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_fax"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Fax no (Optional)"
                    android:inputType="phone"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_email" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_email"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    />



            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_email"
                android:text="Account Details"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/icon_user_name" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_user_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Enter Your User Name"
                    android:inputType="textCapWords"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_password" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_password"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Enter Your Password"
                    android:inputType="textPassword"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_password" />




                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_re_password"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/tv_email"
                    android:paddingTop="10dp"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorBodyText"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chk_terms_condition"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:text="I agree to the AstaGuru's " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_toRightOf="@+id/img_re_password"
                    android:text="@string/terms_condition"
                    android:textColor="@color/colorLink" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_proceed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_btn_sign_in"
                android:paddingRight="10dp"
                android:text="Proceed"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
