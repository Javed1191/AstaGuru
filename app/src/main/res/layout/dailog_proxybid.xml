<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_lay_back"
              android:orientation="vertical">

    <com.infomanav.astaguru.WorkSansSemiBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:padding="17dp"
        android:scaleType="center"
        android:text="Please confirm your bid"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="@drawable/line"/>

    <LinearLayout
        android:id="@+id/lay_bid_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/tv_proxylot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Lot1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="9sp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="5dp"
                    android:hint="Current Bid Value"
                    android:inputType="textEmailAddress"
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/iv_iconproxy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="â‚¹"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"

                        />

                    <com.infomanav.astaguru.WorkSansRegular

                        android:id="@+id/tv_bidvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/iv_iconproxy"
                        android:text=""
                        android:textColor="@color/colorPrimary"

                        android:textSize="12sp"
                        android:textStyle="bold"/>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/line"/>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/usernacme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="5dp"
                    android:hint="Proxy Bid"
                    android:inputType="textEmailAddress"
                    android:textSize="12sp"/>

                <EditText
                    android:padding="5dp"
                    android:id="@+id/edt_proxy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:hint="Enter your value"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </LinearLayout>




        </LinearLayout>


    <com.infomanav.astaguru.WorkSansMedium
        android:visibility="gone"
        android:padding="15dp"
        android:id="@+id/tv_confirm_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Once submitted can not be changed online. Confirm?"
        android:textColor="@color/colorLink"
        android:textSize="17sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.infomanav.astaguru.WorkSansMedium
            android:padding="5dp"
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Cancel"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"/>

        <View
            android:layout_width="0.01dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"

            android:background="@drawable/line"/>

        <com.infomanav.astaguru.WorkSansMedium
            android:padding="5dp"
            android:id="@+id/tv_confim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Confirm"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorLink"
            android:textSize="17sp"/>


    </LinearLayout>

</LinearLayout>