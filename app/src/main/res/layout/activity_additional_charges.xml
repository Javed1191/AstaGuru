<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_closeactivity"
                android:background="@drawable/left_arrow"
                android:gravity="left"
                />
            <com.infomanav.astaguru.WorkSansMedium
                android:id="@+id/tool_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginLeft="25dp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:text="Lot 1"
                android:textSize="20dp"
                android:textStyle="bold" />



        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:gravity="left"
        android:orientation="vertical">


        <com.infomanav.astaguru.WorkSansSemiBold

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Billing Address"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/rel_size"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/grid_image"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text="Billing Name:"
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    />

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_billing_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"

                    android:textSize="12sp"
                    android:text="Test Name"

                    android:textColor="@color/colorBodyText"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text="Billing Address:"

                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    />

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_billing_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"

                    android:textSize="12sp"
                    android:text="204,fc road,35th floor,mumbai "

                    android:textColor="@color/colorBodyText"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text="City:"
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:textColor="@color/colorPrimary"
                    />

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
android:id="@+id/tv_city"
                    android:textSize="12sp"
                    android:text="Mumbai"

                    android:textColor="@color/colorBodyText"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text="State:"
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:textColor="@color/colorPrimary"
                    />

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"

                    android:textSize="12sp"
                    android:text="Maharashtra"

                    android:textColor="@color/colorBodyText"
                    android:id="@+id/tv_state" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text="Country:"

                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    />

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"

                    android:textSize="12sp"
                    android:text="India"

                    android:textColor="@color/colorBodyText"
                    android:id="@+id/tv_cntry" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text="Zip:"

                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    />

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"

                    android:textSize="12sp"
                    android:text="400 050"

                    android:textColor="@color/colorBodyText"
                    android:id="@+id/tv_zip" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text="Telephone:"

                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    />

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"

                    android:textSize="12sp"
                    android:text="022-4004521"

                    android:textColor="@color/colorBodyText"
                    android:id="@+id/tv_tel_phn" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text="Email:"

                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    />

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"

                    android:textSize="12sp"
                    android:text="TEst@gmail.com"

                    android:textColor="@color/colorBodyText"
                    android:id="@+id/tv_emaiid" />

            </LinearLayout>


            <com.infomanav.astaguru.WorkSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/tv_update_address"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Update Your Billing Details"
                android:textColor="@color/colorLink" />

        </LinearLayout>


        <com.infomanav.astaguru.WorkSansSemiBold

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Purchase Details"
            android:textColor="@color/colorPrimary"
            />
        <com.infomanav.astaguru.WorkSansRegular

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Lot 1"
            android:textSize="12sp"

            android:id="@+id/tv_lot"
            android:textColor="#ffffff"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_main_img"
                android:layout_width="80dp"
                android:layout_marginRight="5dp"
                android:layout_height="90dp"
                android:src="@drawable/img_past_1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rel_artist"

                android:layout_toRightOf="@+id/iv_main_img"
                android:gravity="left"

                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/testartist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Artist:"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_ac_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_toRightOf="@+id/testartist"
                    android:text="Morderen "
                    android:textColor="@color/colorBodyText"
                    />






            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_main_img"
                android:id="@+id/rel_cat"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/rel_artist"
                android:gravity="left"

                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/testcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Category:"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_ac_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_toRightOf="@+id/testcategory"
                    android:text="Morderen "
                    android:textColor="@color/colorBodyText"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_main_img"
                android:id="@+id/rel_medium"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/rel_cat"
                android:gravity="left"

                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/testmidium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Medium:"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_ac_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_toRightOf="@+id/testmidium"
                    android:text="Morderen "
                    android:textColor="@color/colorBodyText"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_main_img"
                android:id="@+id/rel_year"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/rel_medium"
                android:gravity="left"

                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/testyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Year:"
                    android:textColor="@color/colorPrimary"
                    />
                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_ac_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_toRightOf="@+id/testyear"
                    android:text="Year"
                    android:textColor="@color/colorBodyText"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_main_img"
                android:id="@+id/rel_size"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/rel_year"
                android:gravity="left"

                android:orientation="vertical">


                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/testcsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Size:"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_ac_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_toRightOf="@+id/testcsize"
                    android:text="Morderen "
                    android:textColor="@color/colorBodyText"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/rel_size"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/iv_main_img"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:text="Hummer Price:"

                        android:layout_gravity="left"
                        android:textSize="12sp"
                        android:textColor="@color/colorBodyText"
                        />

                    <com.infomanav.astaguru.WorkSansRegular
android:id="@+id/tv_ac_hummerprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="0.3"

                        android:textSize="12sp"
                        android:text="30,00,000 "

                        android:textColor="@color/colorPrimary"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/testsizea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1.00"
                        android:text="15% Buyers Primium:"

                        android:layout_gravity="left"
                        android:textSize="12sp"
                        android:textColor="@color/colorBodyText"
                        />
                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_ac_byerprimium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="0.3"

                        android:textSize="12sp"
                        android:text="3,00,000 "

                        android:textColor="@color/colorPrimary"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:text="Vat On Hammer Price(12.5%):"

                        android:layout_gravity="left"
                        android:textSize="12sp"
                        android:textColor="@color/colorBodyText"
                        />

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="0.3"
android:id="@+id/tv_ac_vatonhummer"
                        android:textSize="12sp"
                        android:text="2,50,000 "

                        android:textColor="@color/colorPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:text="14.5% Service Tax On Buyers Premium:"

                        android:layout_gravity="left"
                        android:textSize="12sp"
                        android:textColor="@color/colorBodyText"
                        android:id="@+id/textView7" />

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="0.3"

                        android:textSize="12sp"
                        android:text="43,500"

                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tv_ac_servicetax" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"

                    android:layout_height="wrap_content">

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="Grand Total:"

                        android:layout_gravity="right"
                        android:paddingRight="15dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBodyText"
                        />

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="0.3"
android:id="@+id/tv_ac_grandtotal"
                        android:textSize="12sp"
                        android:text="25,93,500 "

                        android:textColor="@color/colorPrimary"
                        />

                </LinearLayout>

            </LinearLayout>






        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:gravity="left"
            android:orientation="horizontal">



            <com.infomanav.astaguru.WorkSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:text="Note:"
                android:textColor="@color/colorLink" />

            <com.infomanav.astaguru.WorkSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="left"
                android:text=" Crating and Shipping Charged Separately Depending on Delivery Location."
                android:textColor="@color/colorBodyText" />


        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>