<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/grid_bg"
    android:gravity="center"
  >


    <LinearLayout
        android:id="@+id/lin_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grid_image"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"

            android:src="@drawable/img_default" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:orientation="horizontal">

            <com.infomanav.astaguru.WorkSansRegular

                android:id="@+id/tv_lot"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center"

                android:text="Lot1 "

                android:textColor="#ffffff"
                android:textSize="9sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:layout_toRightOf="@+id/tv_lot"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_zoom"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/icon_zoom"
                    android:gravity="left" />

                <ImageView
                    android:id="@+id/iv_addtogallary"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_zoom"
                    android:background="@drawable/icon_addgallary"
                    android:gravity="center" />

                <!--<ImageView-->
                <!--android:id="@+id/iv_oncceff"-->
                <!--android:layout_width="12dp"-->
                <!--android:layout_height="12dp"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_toRightOf="@+id/iv_conce"-->
                <!--android:background="@drawable/icon_refresh"-->
                <!--android:gravity="center" />-->

                <ImageView
                    android:id="@+id/iv_oncce"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:padding="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_addtogallary"
                    android:background="@drawable/icon_i"
                    android:gravity="center" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"

            android:background="@drawable/line" />

        <com.infomanav.astaguru.WorkSansMedium
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Morderen Indian Art"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.infomanav.astaguru.WorkSansRegular
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="Total Sale Value"
            android:textColor="@color/colorBodyText"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"


            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:gravity="left"
                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Current Bid"
                    android:textColor="@color/colorBodyText"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"

                        />

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_one"
                        android:gravity="center"
                        android:text="13,15,200"
                        android:textColor="#000000"
                        android:id="@+id/tv_current_bid"


                        android:textSize="10sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="0.01dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5sp"

                android:background="@drawable/line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"

                android:gravity="center"
                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Next Valid Bid"
                    android:textColor="@color/colorBodyText"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"

                        />

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_two"
                        android:gravity="center"
                        android:text="20,60,200"
                        android:id="@+id/tv_nextbid"

                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.infomanav.astaguru.WorkSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Countdown"
                android:textColor="#000000"
                android:textSize="10sp" />

            <com.infomanav.astaguru.WorkSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/tv_bidclosetime"
                android:text="1 Day 05:30:45"
                android:textColor="#e63c3c"
                android:textSize="10sp" />


        </LinearLayout>




    </LinearLayout>


</LinearLayout>