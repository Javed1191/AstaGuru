<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/grid_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_front_sub"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/grid_imagepastsub"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_default"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/tv_lot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center"

                android:text="Lot1 "
                android:textColor="#ffffff"
                android:textSize="9sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_zoom"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_zoom"
                    android:gravity="left"/>

                <ImageView
                    android:id="@+id/iv_addtogallary"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iv_zoom"
                    android:src="@drawable/icon_addgallary"
                    android:gravity="left"
                    />

                <ImageView
                    android:id="@+id/iv_flip"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toRightOf="@+id/iv_addtogallary"
                    android:src="@drawable/icon_i"
                    android:gravity="left"/>


            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="@drawable/line"/>




        <com.infomanav.astaguru.WorkSansMedium
            android:id="@+id/tv_sub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Jamini Roy"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <com.infomanav.astaguru.WorkSansRegular
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:textSize="10sp"
            android:text="Untitled (Krishna)"
            android:textColor="@color/colorBodyText"/>

        <LinearLayout
            android:id="@+id/lin_front_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_start_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:textSize="10sp"
                        android:text="Start Price"
                        android:textColor="@color/colorBodyText"/>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/iv_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="â‚¹"
                            android:textColor="@color/colorPrimary"
                            android:textSize="11sp"

                            />



                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/tv_bidvalue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/iv_two"
                            android:gravity="center"
                            android:text="20,60,200"
                            android:textColor="#000000"
                            android:textSize="11sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lin_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:orientation="horizontal"
                        android:visibility="invisible">


                        <com.infomanav.astaguru.WorkSansRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(Inclusive of 15% Buyers\nPremium )"
                            android:textColor="@color/colorBodyText"
                            android:textSize="11sp"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.infomanav.astaguru.WorkSansMedium
            android:visibility="gone"
            android:id="@+id/tv_bought_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Bought In"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_back_sub"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_lot_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_rectangle"
                    android:gravity="center"

                    android:text="Lot1 "
                    android:textColor="#ffffff"
                    android:textSize="9sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_close_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/icon_close_sml"
                        android:gravity="left"/>


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:gravity="left"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rel_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="left"

                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testartist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Artist: "


                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:textStyle="bold"/>

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_sub_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testartist"
                        android:gravity="left"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:text="Morderen "
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/rel_artist"
                    android:gravity="left"

                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Category: "


                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:textStyle="bold"/>

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testcategory"
                        android:gravity="left"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:text="Paintings "
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_category"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/iv_main_img"
                    android:gravity="left"

                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testmidium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Medium: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_sub_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testmidium"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="Morderen "
                        android:ellipsize="marquee"
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_medium"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/iv_main_img"
                    android:gravity="left"

                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testyear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Year: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_sub_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testyear"
                        android:gravity="left"
                        android:text="Year"
                        android:ellipsize="marquee"
                        android:maxLines="1"
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_year"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_main_img"
                    android:gravity="left"

                    android:orientation="vertical">


                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testcsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Size: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_sub_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/testcsize"
                        android:gravity="left"

                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:text="Morderen "
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_etimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_size"
                    android:layout_marginTop="2dp"
                    android:gravity="left"

                    >


                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/testestimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Estimate: "
                        android:textColor="@color/colorPrimary"

                        android:textSize="10sp"
                        />

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_sub_estimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/testestimate"
                        android:gravity="left"

                        android:maxLines="1"
                        android:text="Morderen "
                        android:ellipsize="marquee"
                        android:textColor="@color/colorBodyText"
                        android:textSize="10sp"
                        />

                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>


        <View
            android:id="@+id/view_v"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line"/>


        <Button
            android:id="@+id/btn_proxybid"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/btn_bidnow"
            android:background="#000000"
            android:text="Proxy Bid"
            android:textColor="#ffffff"
            android:textSize="8sp"
            android:visibility="visible"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line"/>

        <LinearLayout
            android:id="@+id/lin_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_detail"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:background="@drawable/icon_detail"
                android:gravity="center_vertical"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>