<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"   >
            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tool_text"
                android:gravity="left"
                android:textColor="#ffffff"
                android:text="Management"
                android:textStyle="bold"
                android:textSize="20dp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/button_bg_stroke"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_first_name" />

                    <EditText
                        style="@style/Edittext_Style"
                        android:id="@+id/edt_name"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_below="@+id/tv_email"
                        android:textColor="@color/colorBodyText"
                        android:hint="Name"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_stroke"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_email" />

                    <EditText
                        style="@style/Edittext_Style"
                        android:id="@+id/edt_email_id"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:paddingTop="10dp"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="10dp"
                        android:layout_below="@+id/tv_email"
                        android:textColor="@color/colorBodyText"
                        android:hint="Email Id"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_stroke"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_subject" />

                    <EditText
                        style="@style/Edittext_Style"
                        android:id="@+id/edt_subject"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_below="@+id/tv_email"
                        android:textColor="@color/colorBodyText"
                        android:hint="Subject"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_stroke"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_description" />

                    <EditText
                        style="@style/Edittext_Style"
                        android:id="@+id/edt_Discription"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_below="@+id/tv_email"
                        android:textColor="@color/colorBodyText"
                        android:hint="Discription"
                        />



                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_upload" />


                    <TextView
                        android:id="@+id/tv_zxip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Upload Your File"
                        android:textColor="@color/colorBodyText" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:text="Choose File"
                        android:id="@+id/btn_select_file"
                        android:layout_marginLeft="40dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="12dp"
                        android:textAllCaps="false"
                        android:background="@drawable/button_bg_stroke"
                        android:layout_height="35dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:id="@+id/tv_img_name"
                        android:layout_toRightOf="@+id/img_zip"
                        android:text=" No File Selected"
                        android:textColor="@color/colorBodyText" />

                    <ImageView
                        android:layout_width="20dp"
                        android:id="@+id/img_user_pic"
                        android:layout_height="20dp" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_contact" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_contact"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Contact"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_note" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_note"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Note"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_eyer" />

                        <TextView
                            android:id="@+id/tv_fasx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_toRightOf="@+id/img_fax"
                            android:text="How Did You Hear About Us?"
                            android:textColor="@color/colorBodyText" />



                    </LinearLayout>
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:editable="false"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBodyText"
                        android:background="@android:color/transparent"
                        android:hint="select source">
                    </AutoCompleteTextView>


                </RelativeLayout>


            </LinearLayout>



            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_btn_sign_in"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:text="Submit"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
