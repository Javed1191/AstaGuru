<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/image_slider1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    custom:auto_cycle="true"
                    custom:pager_animation="Accordion"
                    custom:pager_animation_span="1100"/>

                <RelativeLayout
                    android:id="@+id/lay_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/custom_lay_back"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"

                    android:visibility="gone">

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="fonts/EBGaramond-Regular.ttf"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"/>

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_below="@+id/tv_title"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="fonts/WorkSans-Regular.otf"
                        android:text=""
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>


            </RelativeLayout>


            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                custom:padding_left="10dp"
                custom:selected_drawable="@drawable/selcted"
                custom:unselected_drawable="@drawable/unselected"/>


            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Upcoming Auctions"
                android:textColor="#000000"
                android:textSize="17sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/image_slider2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    custom:auto_cycle="true"
                    custom:pager_animation="Accordion"
                    custom:pager_animation_span="1100"/>

                <RelativeLayout
                    android:id="@+id/lay_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/custom_lay_back"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"

                    android:visibility="gone">

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="fonts/EBGaramond-Regular.ttf"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"/>

                    <com.infomanav.astaguru.WorkSansRegular
                        android:id="@+id/tv_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_centerHorizontal="true"
                        android:fontFamily="fonts/WorkSans-Regular.otf"
                        android:text=""
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>


            </RelativeLayout>

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                custom:padding_left="10dp"
                custom:selected_drawable="@drawable/selcted"
                custom:unselected_drawable="@drawable/unselected"/>
            <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/view_pager"-->
            <!--custom:padding_left="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="170dp" />-->

            <!---->


            <!--<com.infomanav.astaguru.CirclePageIndicator-->
            <!--android:id="@+id/indicator"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:paddingLeft="17dp"-->

            <!--android:paddingTop="3dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/view_pager"-->
            <!--/>-->

            <com.infomanav.astaguru.WorkSansMedium
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Featured Auctions"
                android:textColor="#000000"
                android:textSize="17sp"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_img_third_one"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_left"/>

                <ImageView
                    android:id="@+id/iv_img_third_two"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_right"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv_four_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_3_3"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#10000000"
                    >


                    <LinearLayout
                        android:id="@+id/lin_recordprice"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/tv_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Record Price Artworks"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"/>

                        <com.infomanav.astaguru.WorkSansRegular
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="List of top 20 artworks, by value,"
                            android:textColor="@android:color/white"/>

                        <com.infomanav.astaguru.WorkSansRegular
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="sold by Astaguru till date"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>

            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Videos"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:textSize="17sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/image_video_slider"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    custom:auto_cycle="true"
                    custom:pager_animation="Accordion"
                    custom:pager_animation_span="1100"/>

                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/custom_indicator_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    custom:padding_left="10dp"
                    custom:selected_drawable="@drawable/selcted"
                    custom:unselected_drawable="@drawable/unselected"/>


                <android.support.v4.view.ViewPager
                    android:visibility="gone"
                    android:id="@+id/mViewPageryoutube"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    />


                <com.infomanav.astaguru.WorkSansRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="fonts/WorkSans-Regular.otf"
                    android:gravity="center"
                    android:text="Browse through our video documentations of our"
                    android:textColor="@color/colorBodyText"
                    android:textSize="12sp"/>

                <com.infomanav.astaguru.WorkSansRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="fonts/WorkSans-Regular.otf"
                    android:gravity="center"
                    android:text="auctions, Art talk episodes, auction preview "
                    android:textColor="@color/colorBodyText"
                    android:textSize="12sp"/>

                <com.infomanav.astaguru.WorkSansRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="fonts/WorkSans-Regular.otf"
                    android:gravity="center"
                    android:text="coverage, and many more."
                    android:textColor="@color/colorBodyText"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
