<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_leftarrow"

                android:background="@drawable/left_arrow"
                android:gravity="left"
                />
            <com.infomanav.astaguru.WorkSansMedium
                android:id="@+id/tool_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginLeft="25dp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:text="Lot 1"
                android:textSize="20dp"
                android:textStyle="bold" />



        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">




        <LinearLayout
            android:id="@+id/lin_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_change_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="Currency :" />
                <com.infomanav.astaguru.WorkSansRegular

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a78e69"
                    android:id="@+id/tv_type"
                    android:text="INR"

                    android:textSize="12sp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/lot_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img_default" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/line" />
            <com.infomanav.astaguru.WorkSansMedium
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Morderen Indian Art"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.infomanav.astaguru.WorkSansRegular
                android:id="@+id/tv_title_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Total Sale Value"
                android:textColor="@color/colorBodyText"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"


                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="Current Bid"
                        android:textColor="@color/colorBodyText"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_one"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"

                            />

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/tv_current_lot"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iv_one"
                            android:gravity="center"
                            android:text="13,15,200"
                            android:textColor="#000000"

                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="0.01dp"
                    android:layout_height="30dp"

                    android:background="@color/colorBodyText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:orientation="vertical">

                    <com.infomanav.astaguru.WorkSansRegular

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Next Valid Bid"
                        android:textColor="@color/colorBodyText"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_two"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center" />

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/tv_next_lot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iv_two"
                            android:gravity="center"
                            android:text="20,60,200"

                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">


                <com.infomanav.astaguru.WorkSansRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="Countdown"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <com.infomanav.astaguru.WorkSansRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="1 Day 05:30:45"
                    android:textColor="#e63c3c"
                    android:textSize="10sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/c"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/icon_addgallary"
                        android:gravity="left" />

                    <ImageView
                        android:id="@+id/iv_conce"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/c"
                        android:background="@drawable/lotrefresh"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/iv_zoom"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv_conce"
                        android:background="@drawable/lotzoom"
                        android:gravity="center" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_bid_now_lot"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@+id/rel_left"

                        android:background="#000000"
                        android:text="Bid Now"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/btn_proxy_bid_lot"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/btn_left"
                        android:background="#000000"
                        android:text="Proxy Bid"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/line" />
            <LinearLayout
                android:id="@+id/lin_fronct"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:gravity="left"
                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/tv_tictle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:text="Lot Description"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rel_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rel_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_toRightOf="@+id/iv_main_img"
                        android:gravity="left"

                        android:orientation="vertical">

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/testartist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Artist :"
                            android:textColor="#000000" />

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/tv_artist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/testartist"

                            android:gravity="center"
                            android:text="Morderen "
                            android:textColor="@color/colorBodyText" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rel_artist"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_main_img"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/testcategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Category :"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/testcategory"

                            android:gravity="center"
                            android:text="Morderen "
                            android:textColor="@color/colorBodyText" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rel_cat"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_main_img"
                        android:gravity="left"

                        android:orientation="vertical">

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/testmidium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Medium :"

                            android:textColor="@color/colorPrimary" />

                        <com.infomanav.astaguru.WorkSansMedium
                            android:id="@+id/tv_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/testmidium"

                            android:gravity="center"
                            android:text="Morderen "
                            android:textColor="@color/colorBodyText" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rel_medium"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_main_img"
                        android:gravity="left"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/testyear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:text="Year :"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/testyear"

                            android:gravity="center"
                            android:text="Year"
                            android:textColor="@color/colorBodyText" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rel_year"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_main_img"
                        android:gravity="left"

                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/testccsize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Size :"

                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/testccsize"

                            android:gravity="center"
                            android:text="Morderen "
                            android:textColor="@color/colorBodyText" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_sicze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rel_size"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_main_img"
                        android:gravity="left"

                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/testcsize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Estimate :"

                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_estimate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/testcsize"

                            android:gravity="center"
                            android:text="800000-120000 "
                            android:textColor="@color/colorBodyText" />

                    </RelativeLayout>


                </RelativeLayout>

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/tv_additonal_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:text="View Addtional Charges"
                    android:textColor="@color/colorLink" />

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:text="Addtional Information"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/tv_addinfo_one"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"

                    android:text="This lot is a National Art Treasure - Non Exportable Item\n(payment only in Indian Rupees)"
                    android:textColor="@color/colorBodyText"
                    android:textSize="10sp" />

                <!--<com.infomanav.astaguru.WorkSansRegular-->

                <!--android:id="@+id/tv_addinfo_two"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="20dp"-->

                <!--android:gravity="left"-->
                <!--android:text="Exhibited &amp; Published : Past Present Unto The Future of Indian Art, \nLalit Kala Academi, 2007"-->
                <!--android:textColor="@color/colorBodyText"-->
                <!--android:textSize="10sp" />-->

                <!--<com.infomanav.astaguru.WorkSansRegular-->
                <!--android:id="@+id/tv_addinfo_three"-->
