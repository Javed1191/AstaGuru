<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarmyprofile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <TextView
                android:id="@+id/toolbar_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:text="Cancel"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/toolbar_vtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="My Profile"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/toolbar_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:text="Done"

                android:textSize="20sp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="10dp">

            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_email"
                android:text="Personal Details"
                android:textColor="@color/colorBodyText"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_first_name" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_first_name"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="First Name"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_first_name" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_last_name"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Last Name"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_mobile" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_mob_num"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Mobile Number"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_telephn" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_tel_num"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Telephone Number"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_email" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_email"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Email"
                    />



            </LinearLayout>



            <com.infomanav.astaguru.WorkSansMedium

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Billing Address"
                android:textColor="@color/colorBodyText"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_first_name" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_bill_name"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Billing Name"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_city" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_bill_addr"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Billing Address"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_city" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_city"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="City"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_city" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_state"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="State"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_city" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_zip"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Zip"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_telephn" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_bill_tel_phn"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Telephone Number"
                    />



            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_email"
                android:text="Account Details"
                android:textColor="@color/colorBodyText"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_user_name" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_user_name"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:enabled="false"
                    android:paddingBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="User Name"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_password" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_password"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textPassword"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Password"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_stroke"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_password" />

                <EditText
                    style="@style/Edittext_Style"
                    android:id="@+id/edt_nick_name"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="text"
                    android:layout_below="@+id/tv_email"
                    android:textColor="@color/colorBodyText"
                    android:hint="Nick Name"
                    />



            </LinearLayout>




        </LinearLayout>

    </ScrollView>
</LinearLayout>
