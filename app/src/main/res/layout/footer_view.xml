<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white"

    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/grid_image"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <com.infomanav.astaguru.WorkSansRegular

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="3dp"
                            android:textSize="12sp"
                            android:id="@+id/tv_filter"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:text="Filter"

                            />

                        <ImageView

                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_marginLeft="10dp"
                            android:background="@drawable/down_arrow"
                            android:gravity="center"

                            android:textColor="@color/colorBodyText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_margin="5dp"

                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.9"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">

                        <com.infomanav.astaguru.WorkSansRegular
                            android:id="@+id/tv_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginLeft="40dp"
                            android:textColor="#000000"
                            android:text="Currency:" />
                        <com.infomanav.astaguru.WorkSansRegular

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#a78e69"
                            android:id="@+id/tv_rs_type"
                            android:text="INR"

                            android:textSize="12sp"
                            />

                        <RelativeLayout
                            android:layout_width="25dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/re_grid"
                            android:layout_height="25dp">

                            <ImageView
                                android:id="@+id/iv_grid"

                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/grid_dark"
                                android:gravity="center"

                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="25dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/re_list"
                            android:layout_height="25dp">
                            <ImageView
                                android:id="@+id/iv_list"

                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/list_light"

                                android:textColor="@color/colorBodyText" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:background="@drawable/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"

                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <com.infomanav.astaguru.WorkSansRegular

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:text="Sort By :"
                                android:textSize="12sp"
                                android:textStyle="bold"

                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="10dp"
                                android:background="#a78e69"
                                android:visibility="invisible"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <com.infomanav.astaguru.WorkSansRegular

                                android:id="@+id/tv_lot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"

                                android:text="Lots"
                                android:textSize="11sp"

                                />

                            <View
                                android:id="@+id/view_lot"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="10dp"
                                android:background="#a78e69"
                                android:visibility="visible"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <com.infomanav.astaguru.WorkSansRegular

                                android:id="@+id/tv_lettest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"
                                android:text="Latest"
                                android:textSize="11sp"

                                />

                            <View
                                android:id="@+id/view_lettest"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="10dp"
                                android:background="#a78e69"
                                android:visibility="invisible"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <com.infomanav.astaguru.WorkSansRegular

                                android:id="@+id/tv_significant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"
                                android:text="Significant"
                                android:textSize="11sp"

                                />

                            <View
                                android:id="@+id/view_significant"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="10dp"
                                android:background="#a78e69"
                                android:visibility="invisible"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <com.infomanav.astaguru.WorkSansRegular

                                android:id="@+id/tv_popular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"
                                android:text="Popular"
                                android:textSize="11sp"

                                />

                            <View
                                android:id="@+id/view_popular"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="10dp"
                                android:background="#a78e69"
                                android:visibility="invisible"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <com.infomanav.astaguru.WorkSansRegular

                                android:id="@+id/tv_comingsoon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"
                                android:text="Closing Soon"
                                android:textSize="11sp"

                                />

                            <View
                                android:id="@+id/view_comingsoon"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="10dp"
                                android:background="#a78e69"
                                android:visibility="invisible"/>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:background="@drawable/line" />
            </LinearLayout>


        </LinearLayout>

</LinearLayout>