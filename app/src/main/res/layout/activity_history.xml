<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:gravity="left"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/grid_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/img_past_1" />


                <TextView
                    android:id="@+id/tv_lot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Lot 1"
                    android:layout_toRightOf="@+id/grid_image"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel_artist"
                    android:layout_below="@+id/tv_lot"

                    android:layout_toRightOf="@+id/grid_image"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testartist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Artist :"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testartist"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                        />






                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
                    android:id="@+id/rel_cat"
                    android:layout_below="@+id/rel_artist"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Category :"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testcategory"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
                    android:id="@+id/rel_medium"
                    android:layout_below="@+id/rel_cat"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testmidium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Medium :"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tv_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testmidium"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
                    android:id="@+id/rel_year"
                    android:layout_below="@+id/rel_medium"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testyear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Year :"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testyear"
                        android:text="Year"
                        android:textColor="@color/colorPrimary"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
                    android:id="@+id/rel_size"
                    android:layout_below="@+id/rel_year"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testcsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Size :"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testcsize"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
android:id="@+id/rel_estimate"
                    android:layout_below="@+id/rel_size"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testestimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Estimate :"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tv_estimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testestimate"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                        />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
                    android:layout_marginTop="10dp"

                    android:layout_below="@+id/rel_estimate"
                    android:gravity="left"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_bid_now"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:background="#000000"

                        android:text="Bid Now"

                        android:textColor="#ffffff"
                        />
                    <Button
                        android:id="@+id/btn_proxy_bid"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="#000000"
                        android:layout_toRightOf="@+id/btn_bid_now"
                        android:text="Proxy Bid "
                        android:textColor="#ffffff"
                        />

                </RelativeLayout>




            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:layout_marginTop="10dp"
                android:gravity="left"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            android:textStyle="bold"
                    android:gravity="left"
                    android:text="No of Bids:"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textStyle="bold"
                    android:gravity="left"
                    android:id="@+id/tv_no_bids"
                    android:text="10"
                    android:textColor="#000000" />


            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="10dp"

        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nick Name"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Amount($)"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Amount($)"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Date and Time"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />
</LinearLayout>