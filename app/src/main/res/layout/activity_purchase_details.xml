<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingBottom="20dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:gravity="left"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/grid_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/img_default" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:id="@+id/rel_artist"

                    android:layout_toRightOf="@+id/grid_image"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testartist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Artist :"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testartist"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                        />






                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
android:id="@+id/rel_cat"
              android:layout_below="@+id/rel_artist"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Category :"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testcategory"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
android:id="@+id/rel_medium"
                    android:layout_below="@+id/rel_cat"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testmidium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Medium :"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                       />
                    <TextView
                        android:id="@+id/tv_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testmidium"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                      />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
android:id="@+id/rel_year"
                    android:layout_below="@+id/rel_medium"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testyear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Year :"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testyear"
                        android:text="Year"
                        android:textColor="@color/colorPrimary"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/grid_image"
android:id="@+id/rel_size"
                    android:layout_below="@+id/rel_year"
                    android:gravity="left"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testcsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Size :"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                         />
                    <TextView
                        android:id="@+id/tv_dd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_toRightOf="@+id/testcsize"
                        android:text="Morderen "
                        android:textColor="@color/colorPrimary"
                       />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/rel_size"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/grid_image"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"

                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:text="Hummer Price :"

                            android:layout_gravity="left"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="0.3"

                            android:textSize="12sp"
                            android:text="30,00,000 "

                            android:textColor="@color/colorPrimary"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"

                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/testsizea"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1.00"
                            android:text="15% Buyers Primium :"

                            android:layout_gravity="left"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            />

                        <TextView
                            android:id="@+id/tv_sizea"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="0.3"

                            android:textSize="12sp"
                            android:text="3,00,000 "

                            android:textColor="@color/colorPrimary"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"

                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:text="Vat On Hammer Price(12.5%) :"

                            android:layout_gravity="left"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="0.3"

                            android:textSize="12sp"
                            android:text="2,50,000 "

                            android:textColor="@color/colorPrimary"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"

                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:text="14.5% Service Tax On Buyers Premium :"

                            android:layout_gravity="left"
                            android:textSize="10sp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/textView7" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="0.3"

                            android:textSize="12sp"
                            android:text="43,500"

                            android:textColor="@color/colorPrimary"
                            android:id="@+id/textView8" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"

                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:text="Grand Total :"

                            android:layout_gravity="right"
android:paddingRight="15dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="0.3"

                            android:textSize="12sp"
                            android:text="25,93,500 "

                            android:textColor="@color/colorPrimary"
                            />

                    </LinearLayout>

                </LinearLayout>






            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:text="Note:"
                    android:textColor="@color/colorLink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:gravity="left"
                    android:text="Crating and Shipping Charged Separately Depending on Delivery Location."
                    android:textColor="@color/colorLink" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>