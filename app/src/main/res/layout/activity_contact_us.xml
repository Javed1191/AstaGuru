<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.infomanav.astaguru.WorkSansMedium
                android:id="@+id/tool_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Management"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/contact_us_button_lay_back"
        android:textAllCaps="false">


        <Button
            android:id="@+id/btn_reach_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#a78d6a"
            android:text="Reach Us"
            android:textAllCaps="true"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btn_contact_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="Get in Touch"
            android:textAllCaps="true"
            android:textColor="#a78d6a"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_reach_us"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"


            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Head Office"
                    android:textColor="#000000"
                    android:textSize="18sp"/>


                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="AstaGuru"
                    android:textColor="#000000"
                    android:textSize="15sp"/>

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="FGP Centre, Commercial Union House, 3rd Floor, 9, Wallace Street, Fort, Mumbai-400 001, India."
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Gallery"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <com.infomanav.astaguru.WorkSansRegular
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="AstaGuru"
                    android:textColor="#000000"
                    android:textSize="15sp"/>

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="22/26 ICIA Building, K.Dubhash Marg, Next to M.C.Ghia Hall, Kala Ghoda, Mumbai-400 023."
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/iv_descripation"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_telephn"/>

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/tv_callone"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="+91 22 2204 8138/39"
                        android:textColor="#a78d6a"
                        android:textSize="15sp"/>


                </LinearLayout>

                <com.infomanav.astaguru.WorkSansMedium
                    android:id="@+id/tv_calltwo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="+91 22 2204 8140"
                    android:textColor="#a78d6a"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/iv_descricpation"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_email"/>

                    <com.infomanav.astaguru.WorkSansMedium
                        android:id="@+id/tv_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_descricpation"
                        android:gravity="center_vertical"
                        android:text="contact@astaguru.com"
                        android:textColor="#a78d6a"
                        android:textSize="15sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/iv_fb"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_fb"/>

                    <ImageView
                        android:id="@+id/iv_twitter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/icon_twitt"/>

                    <ImageView
                        android:id="@+id/iv_insta"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/icon_insta"/>

                    <ImageView
                        android:id="@+id/iv_pinar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/icon_piner"/>

                    <ImageView
                        android:id="@+id/iv_youtube"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/icon_youtube"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/icon_google"
                        android:visibility="invisible"/>


                </LinearLayout>

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"/>
                <!--<ImageView-->

                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="200dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@drawable/map" />-->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_contact_us"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginTop="15dp"


                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_stroke"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_first_name"/>

                    <EditText
                        android:id="@+id/edt_name"
                        style="@style/Edittext_Style"
                        android:layout_below="@+id/tv_email"
                        android:layout_marginLeft="5dp"
                        android:hint="Name"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorBodyText"
                        android:textColorHint="@color/colorBodyText"
                        android:textSize="12dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_stroke"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_at"/>

                    <EditText
                        android:id="@+id/edt_email"
                        style="@style/Edittext_Style"
                        android:layout_below="@+id/tv_email"
                        android:layout_marginLeft="5dp"
                        android:hint="Email Id"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorBodyText"
                        android:textSize="12dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_stroke"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_telephn"/>

                    <EditText
                        android:id="@+id/edt_number"
                        style="@style/Edittext_Style"
                        android:layout_below="@+id/tv_email"
                        android:layout_marginLeft="5dp"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:maxLength="10"
                        android:textColor="@color/colorBodyText"
                        android:textSize="12dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_stroke"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_category"/>

                    <!--<Spinner-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="5dp"-->


                    <!--android:textSize="10sp"-->
                    <!--android:id="@+id/my_spinner"-->

                    <!--/>-->

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:hint="Select Category"
                        android:textColor="@color/colorBodyText"
                        android:textSize="12sp">
                    </AutoCompleteTextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_stroke"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_mesage"/>

                    <EditText
                        android:id="@+id/edt_msg"
                        style="@style/Edittext_Style"
                        android:layout_below="@+id/tv_email"
                        android:layout_marginLeft="5dp"
                        android:hint="Message"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorBodyText"
                        android:textSize="12dp"
                        />


                </LinearLayout>


                <Button
                    android:id="@+id/btn_contactsubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#000000"
                    android:padding="10dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"/>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>