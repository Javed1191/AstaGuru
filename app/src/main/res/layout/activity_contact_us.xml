<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"   >
            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tool_text"
                android:gravity="left"
                android:textColor="#ffffff"
                android:text="Management"
                android:textStyle="bold"
                android:textSize="20dp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:orientation="horizontal">


        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-8dp"
            android:layout_weight="1"
            android:id="@+id/btn_reach_us"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="#a78d6a"
            android:text="Reach Us" />

        <Button
            android:background="#ffffff"
            android:layout_width="0dp"
            android:id="@+id/btn_contact_us"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="#a78d6a"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="Get in Touch" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/lin_reach_us"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"


            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"


            android:orientation="vertical">

            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
android:textSize="18sp"
                android:text="Head Office"
                android:id="@+id/textView" />


            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
             android:textSize="15sp"
                android:text="AstaGuru"
                android:id="@+id/textView2" />

            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="FGP Centre , Commercial Union House , 3rd Floor , 9 , Wallace Street , Fort , Mumbai-400 001,India."
                android:id="@+id/textView3" />

            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Gallery"
                android:id="@+id/textView4" />

            <com.infomanav.astaguru.WorkSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="AstaGuru"
                android:id="@+id/textView5" />
            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="22/26 ICIA Building , K.Dubhash Marg , Next to M.C.Ghia Hall , Kala Ghoda , Mumbai-400 023."
                android:id="@+id/textView6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/iv_descripation"
                    android:layout_width="13dp"
                    android:layout_gravity="center"
                    android:layout_height="13dp"
                    android:background="@drawable/icon_telephn" />

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/tv_callone"
                    android:layout_marginLeft="10dp"
                    android:textColor="#a78d6a"
                    android:gravity="center_vertical"
                    android:text="+91 22 2204 8138/39"
                    android:textSize="15sp" />




            </LinearLayout>
            <com.infomanav.astaguru.WorkSansMedium
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/tv_calltwo"
                android:layout_marginLeft="25dp"
                android:textColor="#a78d6a"
                android:gravity="center_vertical"
                android:text="+91 22 2204 8140"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/iv_descricpation"
                    android:layout_width="13dp"
                    android:layout_gravity="center"
                    android:layout_height="13dp"
                    android:background="@drawable/icon_email" />

                <com.infomanav.astaguru.WorkSansMedium
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_mail"
                    android:layout_toRightOf="@+id/iv_descricpation"
android:textColor="#a78d6a"
                    android:gravity="center_vertical"
                    android:text="contact@astaguru.com"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="30dp"
                    android:id="@+id/iv_fb"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_fb" />
                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="30dp"
                    android:layout_marginLeft="13dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_twitt" />
                <ImageView
                    android:id="@+id/iv_insta"
                    android:layout_width="30dp"
                    android:layout_height="30dp"      android:layout_marginLeft="13dp"
                    android:background="@drawable/icon_insta" />
                <ImageView
                    android:id="@+id/iv_pinar"
                    android:layout_width="30dp"      android:layout_marginLeft="13dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_piner" />
                <ImageView
                    android:id="@+id/iv_youtube"
                    android:layout_width="30dp"
                    android:layout_height="30dp"      android:layout_marginLeft="13dp"
                    android:background="@drawable/icon_youtube" />
                <ImageView
android:visibility="invisible"
                    android:layout_width="30dp"
                    android:layout_height="30dp"      android:layout_marginLeft="13dp"
                    android:background="@drawable/icon_google" />


            </LinearLayout>
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="200dp"/>
            <!--<ImageView-->

                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="200dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@drawable/map" />-->
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:visibility="invisible"
            android:id="@+id/lin_contact_us"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"


                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"


                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <com.infomanav.astaguru.WorkSansMedium
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_user"

                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textSize="15sp" />

                    <EditText
                        style="@style/Edittext_Style"
                        android:id="@+id/edt_name"
                        android:layout_marginLeft="25dp"
                        android:singleLine="true"

                        android:layout_below="@+id/iv_user"

                        android:hint="Your Complete Name"
                        />

                    <ImageView
                        android:id="@+id/iv_user"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/icon_first_name"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/iv_email"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/icon_at" />

                    <com.infomanav.astaguru.WorkSansMedium
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_email"

                        android:gravity="center_vertical"
                        android:text="Email Id"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_email"
                        style="@style/Edittext_Style"
                        android:layout_below="@+id/iv_email"
                        android:layout_marginLeft="25dp"
                        android:singleLine="true"
                        android:hint="name@domain.com"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/iv_subject"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/icon_telephn" />

                    <com.infomanav.astaguru.WorkSansMedium
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_subject"

                        android:gravity="center_vertical"
                        android:text="Phone Number"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_number"
                        style="@style/Edittext_Style"
                        android:layout_below="@+id/iv_subject"
                        android:layout_marginLeft="25dp"
                        android:singleLine="true"
                        android:hint="+91" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/iv_upload"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/icon_category" />

                    <com.infomanav.astaguru.WorkSansMedium
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_upload"

                        android:gravity="center_vertical"
                        android:text="Category"
                        android:textSize="15sp" />

                    <Spinner

                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"


                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="20dp"
                        android:paddingTop="10dp"
                        android:textSize="10sp"

                        android:id="@+id/my_spinner"

                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/iv_note"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/icon_mesage" />

                    <com.infomanav.astaguru.WorkSansMedium
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_note"

                        android:gravity="center_vertical"
                        android:text="Message"
                        android:textSize="15sp" />

                    <EditText
                        style="@style/Edittext_Style"
                        android:layout_below="@+id/iv_note"
                        android:id="@+id/edt_msg"
                        android:layout_marginLeft="25dp"
                        android:hint="Write Your Message"
                         />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_margin="10dp"
                    android:background="#000000"
                    android:id="@+id/btn_contactsubmit"
                    android:padding="10dp"
android:textAllCaps="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="left" />


            </LinearLayout>




        </ScrollView>


        </LinearLayout>





</LinearLayout>